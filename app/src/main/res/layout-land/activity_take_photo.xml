<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="@dimen/photo_img_height"
        android:layout_height="@dimen/photo_img_width"
        android:layout_centerInParent="true"
        android:src="@drawable/img_photo" />

    <RelativeLayout
        android:id="@+id/lay_picture"
        android:layout_width="@dimen/photo_lay_picture"
        android:layout_height="@dimen/photo_img_height"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_picture"
            android:layout_width="@dimen/photo_img_picture"
            android:layout_height="@dimen/photo_img_picture_width"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/margin_common_60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_cancel" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/Progressbar.Blue"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_print"
        android:layout_width="@dimen/margin_common_80dp"
        android:layout_height="@dimen/margin_common_80dp"
        android:layout_marginRight="@dimen/margin_common_50dp"
        android:gravity="center"
        android:textSize="@dimen/text_common_18sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_shape_white_cir"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="@string/take_photo_print"/>


    <TextView
        android:id="@+id/txt_take_photo"
        android:layout_width="@dimen/photo_txt_photo_width"
        android:layout_height="@dimen/photo_txt_photo_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/photo_txt_photo_margin_bottom"
        android:background="@drawable/bg_shape_white"
        android:gravity="center"
        android:text="@string/take_photo"
        android:textColor="@color/black"
        android:textSize="@dimen/photo_txt_photo_size" />

</RelativeLayout>