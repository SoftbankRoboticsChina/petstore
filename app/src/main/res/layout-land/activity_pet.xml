<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <GridView
        android:id="@+id/gv_picture_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/margin_common_80dp"
        android:layout_margin="@dimen/margin_common_50dp"
        android:verticalSpacing="@dimen/margin_common_50dp"
        android:background="#000000"
        android:numColumns="3" />

    <ImageView
        android:id="@+id/img_pet"
        android:layout_width="@dimen/pet_img_width"
        android:layout_height="@dimen/pet_img_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pet_img_margin_top"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/pet1" />


    <TextView
        android:id="@+id/txt_like_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_like_choice"
        android:textColor="@color/white"
        android:textSize="@dimen/pet_txt_size"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/pet_txt_margin_bottom"/>


</RelativeLayout>