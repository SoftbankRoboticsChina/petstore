<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".launcher.LauncherActivity">

    <RelativeLayout
        android:layout_width="@dimen/welcome_lay_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/txt_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/welcome_theme"
            android:textColor="@color/white"
            android:textSize="@dimen/welcome_txt_theme_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_theme"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/welcome_txt_margin_top"
            android:text="@string/welcome_pet_store"
            android:textColor="@color/white"
            android:textSize="@dimen/welcome_txt_size" />


    </RelativeLayout>

</RelativeLayout>